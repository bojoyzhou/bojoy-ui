.enter {
    transition: max-height 0.3s cubic-bezier(0.46, 0.24, 1, 0.24)!important;
    max-height: 0;

    &.enterActive {
        max-height: 500px;
    }
}
.leave {
    max-height: 500px;

    &.leaveActive {
        max-height: 0;
    }
}
.appear {
    transition: opacity .7s cubic-bezier(0.46, 0.24, 1, 0.24)!important;
    opacity: 0;

    &.appearActive {
        max-height: 500px;
        opacity: 1;
    }
}
